<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.alana.bibliotecafxml.view.HelloController"
            style="-fx-font-family: Arial; -fx-background-color: #f9f9f9;">

    <top>
        <Label text="Biblioteca"
               style="-fx-font-size: 22; -fx-font-weight: bold; -fx-padding: 10;"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Livros cadastrados:" style="-fx-font-size: 16;"/>
            <TableView fx:id="tableLivros" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colTitulo" text="Título" prefWidth="150"/>
                    <TableColumn fx:id="colAutor" text="Autor" prefWidth="120"/>
                    <TableColumn fx:id="colIsbn" text="ISBN" prefWidth="100"/>
                    <TableColumn fx:id="colEdicao" text="Edição" prefWidth="80"/>
                    <TableColumn fx:id="colEmprestimos" text="Empréstimos" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <right>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Empréstimos:" style="-fx-font-size: 16;"/>
            <ListView fx:id="listEmprestimos" prefWidth="200" prefHeight="200"/>
        </VBox>
    </right>

    <bottom>
        <VBox spacing="10" style="-fx-background-color: #e9e9e9;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Cadastrar novo livro:" style="-fx-font-size: 16;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTitulo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Autor:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAutor" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="ISBN:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtIsbn" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Edição:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEdicao" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10">
                <Button text="Cadastrar Livro"
                        onAction="#onCadastrarLivro"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Emprestar Livro"
                        onAction="#onEmprestarLivro"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>

                <Button text="Remover Livro" onAction="#onRemoverLivro"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>


            </HBox>
        </VBox>
    </bottom>

</BorderPane>
